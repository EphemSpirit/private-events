<section class="section new-user">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h1 class="title is-2">Sign In</h1>
        <%= form_for @user do |f| %>
          <% if @user.errors.any? %>
            <% @user.errors.full_messages.each do |msg| %>
              <ul>
                <li><%= msg %></li>
              </ul>
            <% end %>
          <% end %>
          <div class="field">
            <div class="control">
              <%= f.label :name, "Username:" %><br>
              <%= f.text_field :name %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.label :email, "Email:" %><br>
              <%= f.text_field :email %>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <%= f.submit "Sign Up", class: "button is-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<aside>
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        Sign Up Here
      </div>
    </div>
  </div>
</aside>
