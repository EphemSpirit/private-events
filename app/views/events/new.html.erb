<section class="section">
  <div class="container">
    <div class="column is-centered">
      <div class="column is-4">
        <h1>Create an Event</h1>
        <%= form_for @event do |f| %>
          <% if @event.errors.any? %>
            <% @event.errors.full_messages.each do |msg| %>
              <ul>
                <li><%= msg %></li>
              </ul>
            <% end %>
          <% end %>
          <p>
            <%= f.label :title, "Event name:" %><br>
            <%= f.text_field :title %>
          </p>
          <p>
            <%= f.label :description, "Event Description:" %><br>
            <%= f.text_area :description %>
          </p>
          <p>
            <%= f.label :date, "Event Date:" %><br>
            <%= f.date_field :date %>
          </p>
          <p>
            <%= f.submit %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</section>
